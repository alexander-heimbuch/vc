{
  "name": "vc",
  "version": "0.0.1-beta.3",
  "description": "A git cli for humans",
  "main": "./dist/src/vc.js",
  "scripts": {
    "test": "jest",
    "start": "env VC_GIT_DIR='./test' ts-node src/vc.ts",
    "clean": "rm -rf dist/ bundle/",
    "compile": "tsc --build tsconfig.json",
    "build": "run-s clean compile",
    "package": "pkg dist/vc.js --config package.json --options max_old_space_size=4096 --targets node14-macos-x64,node14-linux-x64 --out-path bundle/",
    "bundle": "run-s build package",
    "lint": "prettier --check ./src",
    "fix": "prettier --write ./src",
    "release": "release-it"
  },
  "keywords": [],
  "author": "Alexander Heimbuch <github@heimbu.ch>",
  "license": "MIT",
  "dependencies": {
    "@nozzlegear/railway": "2.0.0",
    "chalk": "4.1.1",
    "commander": "7.2.0",
    "enquirer": "2.3.6",
    "execa": "^5.1.1",
    "ora": "5.4.0",
    "simple-git": "2.39.0",
    "date-fns": "2.22.1",
    "human-interval": "1.0.0",
    "fs-extra": "10.0.0",
    "conf": "10.0.1",
    "ramda": "0.27.1"
  },
  "devDependencies": {
    "ts-node": "10.0.0",
    "typescript": "4.3.2",
    "@types/node": "15.12.1",
    "npm-run-all": "4.1.5",
    "pkg": "5.3.0",
    "ts-jest": "27.0.3",
    "jest": "27.0.6",
    "@types/jest": "26.0.24",
    "tmp-promise": "3.0.2",
    "concat-stream": "2.0.0",
    "prettier": "2.4.1",
    "husky": "7.0.2",
    "pretty-quick": "3.1.1",
    "release-it": "14.11.6"
  },
  "bin": {
    "vc": "./dist/vc.js"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true,
      "assets": [
        "bundle/**"
      ]
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": "npm run lint",
      "after:bump": [
        "npm run bundle"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
