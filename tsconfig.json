{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "noImplicitAny": false,
      "moduleResolution": "node",
      "jsx": "react",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "typeRoots": [
        "./node_modules/@types",
        "./typings"
      ]
    },
    "include": [
      "src/**/*"
    ],
    "files": [
      "src/vc.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
